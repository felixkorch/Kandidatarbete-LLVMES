#macro STORE_RESULT_A 0
    STX tmp
    LDX result_idx
    STA $3000,X
    INX
    STX result_idx
    LDX tmp
#endmacro
#macro STORE_STATUS 0
    PHP
    PLA
    STX tmp
    LDX result_idx
    STA $3000,X
    INX
    STX result_idx
    LDX tmp
#endmacro
.org $8000

main:
    ;; TEST ROR ;;
; Test ROR Accumulator
    LDA #$AA
    ROR
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test ROR Zeropage
    LDA #$AA
    STA $00
    ROR $00
    LDA $00
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test ROR Zeropage,X
    LDA #$AA
    STA $01
    LDX #1
    ROR $00,X
    LDA $01
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test ROR Absolute
    LDA #$AA
    STA $2000
    ROR $2000
    LDA $2000
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test ROR Absolute,X
    LDA #$AA
    STA $2001
    LDX #1
    ROR $2000,X
    LDA $2001
    STORE_RESULT_A   ; $55
    STORE_STATUS

    ;; TEST ROL ;;
; Test ROL Accumulator
    LDA #$55
    ROL
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ROL Zeropage
    ROL $00
    LDA $00
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ROL Zeropage,X
    LDX #1
    ROL $00,X
    LDA $01
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ROL Absolute
    ROL $2000
    LDA $2000
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ROL Absolute,X
    LDX #1
    ROL $2000,X
    LDA $2001
    STORE_RESULT_A   ; $AA
    STORE_STATUS

    ;; TEST LSR ;;
; Test LSR Accumulator
    LDA #$AA
    LSR
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test LSR Zeropage
    LDA #$AA
    STA $00
    LSR $00
    LDA $00
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test LSR Zeropage,X
    LDA #$AA
    STA $01
    LDX #1
    LSR $00,X
    LDA $01
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test LSR Absolute
    LDA #$AA
    STA $2000
    LSR $2000
    LDA $2000
    STORE_RESULT_A   ; $55
    STORE_STATUS
; Test LSR Absolute,X
    LDA #$AA
    STA $2001
    LDX #1
    LSR $2000,X
    LDA $2001
    STORE_RESULT_A   ; $55
    STORE_STATUS

    ;; TEST ASL ;;
; Test ASL Accumulator
    LDA #$55
    ASL
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ASL Zeropage
    ASL $00
    LDA $00
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ASL Zeropage,X
    LDX #1
    ASL $00,X
    LDA $01
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ASL Absolute
    ASL $2000
    LDA $2000
    STORE_RESULT_A   ; $AA
    STORE_STATUS
; Test ASL Absolute,X
    LDX #1
    ASL $2000,X
    LDA $2001
    STORE_RESULT_A   ; $AA
    STORE_STATUS

check_memory:
    LDX #$00
check_memory_loop:
    LDA $3000,X
    CMP expected_result,X
    BNE print_fail
    INX
    CPX #40                     ; Length of expected_results
    BNE check_memory_loop
    LDX #$00 ; Reset X register
print_msg:
    LDA success_str,X
    BEQ success
    STA $2008
    INX
    JMP print_msg
success:
    LDA #10 ; Newline
    STA $2008 ; Print new line
    LDA #0
    STA $200F
print_fail:
    LDX #$00 ; Reset X register
print_msg2:
    LDA fail_str,X
    BEQ fail
    STA $2008
    INX
    JMP print_msg2
fail:
    LDA #10 ; Newline
    STA $2008 ; Print new line
    LDA #1
    STA $200F
success_str:
.db "Rotate/Shift test passed!", 0
fail_str:
.db "Rotate/Shift test failed!", 0
expected_result:
.db $55, $36, $55, $36, $55, $34, $55, $34
.db $55, $34, $AA, $34, $AA, $34, $AA, $34
.db $AA, $34, $AA, $34, $55, $34, $55, $34
.db $55, $34, $55, $34, $55, $34, $AA, $34
.db $AA, $34, $AA, $34, $AA, $34, $AA, $34
result_idx:
.db 0
tmp:
.db 0

.org $FFFC
.dw main ; Reset vector
