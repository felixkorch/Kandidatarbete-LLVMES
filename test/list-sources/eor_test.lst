#macro STORE_RESULT 0
    STX tmp
    LDX result_idx
    STA $3000,X
    INX
    STX result_idx
    LDX tmp
#endmacro

.org $8000

; Flags: N V U B D I Z C

; Test EOR Immediate
main:
    LDA #$03
    EOR #$0C                    
    STORE_RESULT     ; should print 0x0F

; Test EOR Zeropage
    LDA #$03
    STA $20
    LDA #$0C
    EOR $20
    STORE_RESULT     ; should print 0x0F

; Test EOR ZeropageX
    LDA #$03
    LDX #$02
    STA $22
    LDA #$0C
    EOR $20,X
    STORE_RESULT     ; should print 0x0F

; Test EOR Absolute
    LDA #$03
    STA $2000
    LDA #$0C
    EOR $2000
    STORE_RESULT     ; should print 0x0F

; Test EOR AbsoluteX
    LDA #$03
    STA $2002
    LDA #$0C
    LDX #$02
    EOR $2000,X
    STORE_RESULT     ; should print 0x0F

; Test EOR AbsoluteY
    LDA #$03
    STA $2002
    LDA #$0C
    LDY #$02
    EOR $2000,Y
    STORE_RESULT     ; should print 0x0F

; Test EOR IndirectX
    LDA #$03
    STA $30
    LDA #$30
    STA $23
    LDA #$00
    STA $24
    LDX #$03
    LDA #$0C
    EOR ($20),X
    STORE_RESULT     ; should print 0x0F

; Test EOR IndirectY
    LDA #$20
    STA $02
    LDA #$00
    STA $03
    LDA #$03
    STA $22
    LDA #$0C
    LDY #$02
    EOR ($02),Y
    STORE_RESULT     ; should print 0x0F
check_memory:
    LDX #$00
check_memory_loop:
    LDA $3000,X
    CMP expected_result,X
    BNE print_fail
    INX
    CPX #8                     ; Length of expected_results
    BNE check_memory_loop
    LDX #$00 ; Reset X register
print_msg:
    LDA success_str,X
    BEQ success
    STA $2008
    INX
    JMP print_msg
success:
    LDA #10 ; Newline
    STA $2008 ; Print new line
    LDA #0
    STA $200F
print_fail:
    LDX #$00 ; Reset X register
print_msg2:
    LDA fail_str,X
    BEQ fail
    STA $2008
    INX
    JMP print_msg2
fail:
    LDA #10 ; Newline
    STA $2008 ; Print new line
    LDA #1
    STA $200F
success_str:
.db "EOR tests passed!", 0
fail_str:
.db "EOR tests failed!", 0
expected_result:
.db $0F, $0F, $0F, $0F, $0F, $0F, $0F, $0F
result_idx:
.db 0
tmp:
.db 0

.org $FFFC
.dw main ; Reset vector
